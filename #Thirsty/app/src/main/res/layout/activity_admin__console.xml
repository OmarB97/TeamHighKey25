<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.thirsty.Admin_Console"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/unban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Unban"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="284dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/seaGreen"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/ban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Ban"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="284dp"
        android:layout_marginStart="45dp"
        android:layout_alignBaseline="@+id/unban"
        android:layout_alignBottom="@+id/unban"
        android:layout_alignParentStart="true"
        android:background="@color/seaGreen"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Username of User to be banned/unbanned:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="169dp"
        android:layout_marginBottom="103dp"
        android:layout_alignBottom="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="212dp"
        android:layout_marginBottom="66dp"
        android:layout_above="@+id/unban"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mini_logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
